<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="@scheduler-theme.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.brandonlagasse.scheduler2.controller.CustomerAddView">

   <VBox layoutX="2.0" layoutY="98.0" prefHeight="420.0" prefWidth="792.0" spacing="20">
      <padding>
         <Insets bottom="40" left="200" right="200" top="40" />
      </padding>
      <children>

         <VBox spacing="10">
            <children>
               <TextField fx:id="nameField1" disable="true" editable="false" styleClass="text-field" text="Customer ID" />
               <TextField fx:id="nameField" promptText="Name" styleClass="text-field" />
               <TextField fx:id="addressField" promptText="Address" styleClass="text-field" />
               <TextField fx:id="postalCodeField" promptText="Postal Code" styleClass="text-field" />
               <TextField fx:id="phoneField" promptText="Phone" styleClass="text-field" />
               <ComboBox fx:id="countryCombo" onAction="#onCountryCombo" prefWidth="150.0" promptText="Country" />
               <ComboBox fx:id="fldCombo" onAction="#onFldCombo" prefWidth="150.0" promptText="First Level Division" />
            </children>
         </VBox>

         <HBox alignment="CENTER" spacing="10">
            <Button onAction="#onCancel" styleClass="button" text="Go Back" />
            <Button onAction="#saveButton" styleClass="button" text="Save" />
         </HBox>
      </children>
   </VBox>
   <Label layoutX="180.0" layoutY="28.0" styleClass="title-label" text="Add New Customer" />
</AnchorPane>
