<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="@scheduler-theme.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.brandonlagasse.scheduler2.controller.CustomerUpdateView">

   <VBox layoutX="7.0" layoutY="73.0" prefHeight="480.0" prefWidth="781.0" spacing="20">
      <padding>
         <Insets bottom="40" left="200" right="200" top="40" />
      </padding>
      <children>
         <TextField fx:id="customerIdField" disable="true" promptText="Customer ID" styleClass="text-field" />
         <TextField fx:id="nameField" promptText="Name" styleClass="text-field" />
         <TextField fx:id="addressField" promptText="Address" styleClass="text-field" />
         <TextField fx:id="postalCodeField" promptText="Postal Code" styleClass="text-field" />
         <TextField fx:id="phoneField" promptText="Phone" styleClass="text-field" />
         <ComboBox fx:id="countryCombo" onAction="#onCountryCombo" prefWidth="150.0" promptText="Country" />
         <ComboBox fx:id="fldCombo" onAction="#onFldCombo" prefWidth="150.0" promptText="First Level Division" />

         <HBox alignment="CENTER" spacing="10">
            <Button onAction="#onCancel" styleClass="button" text="Go Back" />
            <Button onAction="#onSave" styleClass="button" text="Save" />
         </HBox>
      </children>
   </VBox>
   <Label layoutX="200.0" layoutY="14.0" styleClass="title-label" text="Update Customer" />
</AnchorPane>
